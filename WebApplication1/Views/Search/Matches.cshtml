@{
    ViewData["Title"] = "Matches - Tennis Tracker";
}

<div class="container-fluid px-0">
    <!-- Matches Filter Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-filter me-2"></i>Filter Matches</h4>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Date Range</label>
                    <select class="form-select">
                        <option selected>Today</option>
                        <option>Tomorrow</option>
                        <option>This Week</option>
                        <option>Custom Range...</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tournament</label>
                    <select class="form-select">
                        <option selected>All Tournaments</option>
                        <option>ATP Wimbledon</option>
                        <option>WTA Roland Garros</option>
                        <option>ATP US Open</option>
                        <option>ATP Australian Open</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Match Status</label>
                    <select class="form-select">
                        <option selected>All Matches</option>
                        <option>Live</option>
                        <option>Upcoming</option>
                        <option>Completed</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Apply Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Live Matches Section -->
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-bolt me-2"></i>Live Matches</h4>
                <a href="#" class="text-white">View All Live</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                <!-- Sample live match 1 -->
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-column" style="width: 35%;">
                            <span class="fw-bold">ATP Wimbledon</span>
                            <small class="text-muted">Centre Court - Round of 16</small>
                        </div>
                        <div class="text-center position-relative" style="width: 30%;">
                            <span class="badge bg-danger position-absolute top-0 start-50 translate-middle">LIVE</span>
                            <div class="d-flex justify-content-center align-items-center mt-3">
                                <span class="fw-bold fs-4 mx-2">2</span>
                                <span class="mx-1">-</span>
                                <span class="fw-bold fs-4 mx-2">1</span>
                            </div>
                            <small class="text-muted">3rd Set</small>
                        </div>
                        <div class="d-flex justify-content-end" style="width: 35%;">
                            <div class="text-end me-3">
                                <span class="d-block fw-bold">Djokovic N.</span>
                                <small class="text-muted">(SRB)</small>
                            </div>
                            <div class="text-start">
                                <span class="d-block fw-bold">Alcaraz C.</span>
                                <small class="text-muted">(ESP)</small>
                            </div>
                        </div>
                    </div>
                </a>

                <!-- Sample live match 2 -->
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-column" style="width: 35%;">
                            <span class="fw-bold">WTA Roland Garros</span>
                            <small class="text-muted">Court Philippe-Chatrier - Quarterfinal</small>
                        </div>
                        <div class="text-center position-relative" style="width: 30%;">
                            <span class="badge bg-danger position-absolute top-0 start-50 translate-middle">LIVE</span>
                            <div class="d-flex justify-content-center align-items-center mt-3">
                                <span class="fw-bold fs-4 mx-2">1</span>
                                <span class="mx-1">-</span>
                                <span class="fw-bold fs-4 mx-2">0</span>
                            </div>
                            <small class="text-muted">2nd Set</small>
                        </div>
                        <div class="d-flex justify-content-end" style="width: 35%;">
                            <div class="text-end me-3">
                                <span class="d-block fw-bold">Swiatek I.</span>
                                <small class="text-muted">(POL)</small>
                            </div>
                            <div class="text-start">
                                <span class="d-block fw-bold">Sabalenka A.</span>
                                <small class="text-muted">(BLR)</small>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Upcoming Matches Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="far fa-clock me-2"></i>Upcoming Matches</h4>
                <a href="#" class="text-white">View All Upcoming</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                <!-- Sample upcoming match 1 -->
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-column" style="width: 35%;">
                            <span class="fw-bold">ATP US Open</span>
                            <small class="text-muted">Arthur Ashe Stadium - Semifinal</small>
                        </div>
                        <div class="text-center" style="width: 30%;">
                            <div class="text-muted">
                                <i class="far fa-clock me-1"></i> Today, 19:30
                            </div>
                        </div>
                        <div class="d-flex justify-content-end" style="width: 35%;">
                            <div class="text-end me-3">
                                <span class="d-block fw-bold">Medvedev D.</span>
                                <small class="text-muted">(RUS)</small>
                            </div>
                            <div class="text-start">
                                <span class="d-block fw-bold">Sinner J.</span>
                                <small class="text-muted">(ITA)</small>
                            </div>
                        </div>
                    </div>
                </a>

                <!-- Sample upcoming match 2 -->
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-column" style="width: 35%;">
                            <span class="fw-bold">WTA Australian Open</span>
                            <small class="text-muted">Rod Laver Arena - Final</small>
                        </div>
                        <div class="text-center" style="width: 30%;">
                            <div class="text-muted">
                                <i class="far fa-clock me-1"></i> Tomorrow, 08:00
                            </div>
                        </div>
                        <div class="d-flex justify-content-end" style="width: 35%;">
                            <div class="text-end me-3">
                                <span class="d-block fw-bold">Gauff C.</span>
                                <small class="text-muted">(USA)</small>
                            </div>
                            <div class="text-start">
                                <span class="d-block fw-bold">Rybakina E.</span>
                                <small class="text-muted">(KAZ)</small>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Completed Matches Section -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="far fa-check-circle me-2"></i>Recent Results</h4>
                <a href="#" class="text-white">View All Results</a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="list-group list-group-flush">
                <!-- Sample completed match 1 -->
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-column" style="width: 35%;">
                            <span class="fw-bold">ATP French Open</span>
                            <small class="text-muted">Court Suzanne-Lenglen - Round 3</small>
                        </div>
                        <div class="text-center" style="width: 30%;">
                            <div class="d-flex justify-content-center align-items-center">
                                <span class="fw-bold mx-2">2</span>
                                <span class="mx-1">-</span>
                                <span class="fw-bold mx-2">0</span>
                            </div>
                            <small class="text-muted">Completed</small>
                        </div>
                        <div class="d-flex justify-content-end" style="width: 35%;">
                            <div class="text-end me-3">
                                <span class="d-block fw-bold">Nadal R.</span>
                                <small class="text-muted">(ESP)</small>
                            </div>
                            <div class="text-start">
                                <span class="d-block fw-bold">Ruud C.</span>
                                <small class="text-muted">(NOR)</small>
                            </div>
                        </div>
                    </div>
                </a>

                <!-- Sample completed match 2 -->
                <a href="#" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-column" style="width: 35%;">
                            <span class="fw-bold">WTA Wimbledon</span>
                            <small class="text-muted">Court 1 - Quarterfinal</small>
                        </div>
                        <div class="text-center" style="width: 30%;">
                            <div class="d-flex justify-content-center align-items-center">
