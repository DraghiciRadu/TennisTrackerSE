@model WebApplication1.Models.RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Create Account</h2>

                    <form asp-action="SignUp" method="post">
                        @Html.AntiForgeryToken()
                        <partial name="_ValidationScriptsPartial" />
                        <validation-summary class="text-danger" asp-validation-summary="All"></validation-summary>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope-plus-fill"></i></span>
                                <input type="email" name="email" class="form-control" placeholder="you@example.com" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                                <input type="password" name="password" class="form-control" placeholder="Choose a strong password" required />
                            </div>
                            <div class="form-text">At least 6 characters, one number, one uppercase letter.</div>
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-person-plus-fill"></i> Sign Up
                        </button>

                        <div class="text-center mt-3">
                            <span>Already have an account? <a href="/Account/Login">Login</a></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
